          <a ng-click="vm.chageStatus(vm.orcamento, 7)">
            <img src="/images/content/status_1.png" class="gray" ng-show="!vm.compare(vm.orcamento.idStatus,7)">
            <img src="/images/content/status_1.png" ng-show="vm.compare(vm.orcamento.idStatus,7)">
          </a>
          <label for="marca" class="font">Em execução</label>
        </div>
