            <img src="/images/content/status_1.png" class="gray" ng-show="!vm.compare(vm.orcamento.idStatus,4)">
            <img src="/images/content/status_1.png" ng-show="vm.compare(vm.orcamento.idStatus,4)">
          </a>
          <label for="marca" class="font">Retirada</label>
        </div>
