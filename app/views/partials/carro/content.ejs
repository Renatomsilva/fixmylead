<div ng-controller="CarroController as vm">
  <div class="row">
    <div class="col-md-2 col-md-offset-5">
      <h3 class="page-header fontBig">Pesquisa Veículo</h1>
    </div>
    <div class="col-md-2 col-md-offset-5">
      <form class="form-inline" ng-submit="vm.search(vm.query)" name="searchForm">
        <label for="searchPlace font">Placa</label>
        <input type="searchPlace" class="form-control client-placa" mask="AAA-9999"  id="searchPlace" ng-model="vm.query.plate">
        </br>
        <button type="submit" class="form-control client-search">Pesquisar</button>
      </form>
    </div>
  </div>
  <div class="row" ng-show="vm.viewCarro">
    <div class="col-md-2 col-md-offset-5">
      <h2 class="page-header">Cadastro do Carro</h1>
    </div>
    <div class="col-md-2 col-md-offset-5">
      <form class="form-inline" ng-submit="vm.save(vm.carro)" name="saveForm">
        <div class="form-group">
          <label for="marca">Marca</label>
          <input type="text" class="form-control" name="marca" ng-model="vm.carro.marca">
        </div>
        <div class="form-group">
          <label for="marca">Modelo</label>
          <input type="text" class="form-control" name="modelo" ng-model="vm.carro.modelo">
        </div>
        <div class="form-group">
          <label for="marca">Versão</label>
          <input type="text" class="form-control" name="versao" ng-model="vm.carro.versao">
        </div>
        <div class="form-group">
          <label for="marca">Ano</label>
          <input type="text" class="form-control" name="ano" ng-model="vm.carro.ano">
        </div>
        <div class="form-group">
          <label for="marca">Placa</label>
          <input type="text" class="form-control" name="placa" ng-model="vm.carro.placa">
        </div>
        <div class="form-group" ng-show="!vm.find">
          <button type="submit" class="form-control client-search">Salvar</button>
        </div>
        <div class="form-group" ng-show="vm.find">
            <button type="button" ng-click="vm.newQuote(vm.carro)" class="form-control client-search">Orçamento</button>
          </div>
        </br>
        </br>
        </br>
      </form>
    </div>
  </div>
</div>
<script src="js/controllers/carro.js"></script>